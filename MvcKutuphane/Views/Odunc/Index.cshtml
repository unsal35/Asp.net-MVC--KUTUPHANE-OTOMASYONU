@using MvcKutuphane.Models.Entity
@model List<TBLHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>Ödünç Kitap Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kitap</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>Kitap İade</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.ID</td>
    <td>@item.TBLKitap.KitapAd</td>
    <td>@item.TBLUyeler.UyeAd&nbsp;@item.TBLUyeler.UyeSoyad</td>
    <td>@item.TBLPersonel.Personel</td>
    <td>@Convert.ToDateTime(@item.AlisTarihi).ToString("dd-MM-yyyy")</td>
    <td>@Convert.ToDateTime(@item.IadeTarihi).ToString("dd-MM-yyyy")</td>
    <td><a href="/Odunc/OduncIade/@item.ID" class="btn btn-danger">Kitabı İade Et</a></td>
</tr>
    }
</table>                                      
                                                                                                         
                                                                           